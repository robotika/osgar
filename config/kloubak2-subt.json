{
  "version": 2,
  "robot": {
    "modules": {
      "app": {
          "driver": "application",
          "in": ["encoders", "scan", "emergency_stop", "pose2d", "buttons", "voltage", "rot"],
          "out": ["desired_speed", "pose2d", "artf_xyz", "pose3d"],
          "init": {
            "max_speed": 0.5
          }
      },
      "kloubak": {
          "driver": "kloubak",
          "in": ["slot_can", "slot_desired_speed"],
          "out": ["can", "encoders", "emergency_stop", "pose2d"],
          "init": {}
      },          
      "can": {
          "driver": "can",
          "in": ["slot_raw", "slot_can"],
          "out": ["can", "raw"],
          "init": {"speed": "500k", "canopen":false}
      },
      "serial": {
          "driver": "serial",
          "in": ["slot_raw"],
          "out": ["raw"],
          "init": {"port": "/dev/ttyS0", "speed": 115200,
                   "rtscts":true, "reset":true}
      },
      "lidar": {
          "driver": "lidar",
          "in": ["raw"],
          "out": ["raw", "scan"],
          "init": {"sleep": 0.1, "blind_zone": 100}
      },
      "lidar_tcp": {
          "driver": "tcp",
          "in": ["raw"],
          "out": ["raw"],
          "init": {"host": "192.168.0.1", "port": 2111, "timeout": 3.0}
      },
      "lidar_back": {
          "driver": "lidar",
          "in": ["raw"],
          "out": ["raw", "scan"],
          "init": {"sleep": 0.1, "blind_zone": 100}
      },
      "lidar_back_tcp": {
          "driver": "tcp",
          "in": ["raw"],
          "out": ["raw"],
          "init": {"host": "192.168.1.82", "port": 2111, "timeout": 3.0}
      },
       "camera": {
          "driver": "http",
          "in": [],
          "out": ["raw"],
          "init": {
              "url": "http://192.168.2.32/img.jpg",
              "sleep": 0.1,
              "timeout": 1.0
          }
      },
      "camera_back": {
          "driver": "http",
          "in": [],
          "out": ["raw"],
          "init": {
              "url": "http://192.168.3.32/img.jpg",
              "sleep": 0.1,
              "timeout": 1.0
          }
      },
      "imu": {
          "driver": "lordimu",
          "in": ["raw"],
          "out": ["orientation", "rotation"],
          "init": {}
      },
      "imu_serial": {
          "driver": "serial",
          "in": [],
          "out": ["raw"],
          "init": {"port": "/dev/ttyACM0", "speed": 115200}
      },
      "vesc": {
          "driver": "vesc",
          "in": ["can"],
          "out": ["can"],
          "init": {}
      },
      "can_pcan": {
          "driver": "pcan",
          "in": ["can"],
          "out": ["can"],
          "init": {}
      }
    },
    "links": [["serial.raw", "can.slot_raw"],
              ["can.raw", "serial.slot_raw"],
              ["kloubak.can", "can.slot_can"],
              ["can.can", "kloubak.slot_can"],
              ["app.desired_speed", "kloubak.slot_desired_speed"],
              ["kloubak.pose2d", "app.pose2d"],
              ["lidar_tcp.raw", "lidar.raw"], 
              ["lidar.raw", "lidar_tcp.raw"],
              ["lidar_back_tcp.raw", "lidar_back.raw"],
              ["lidar_back.raw", "lidar_back_tcp.raw"],
              ["lidar.scan", "app.scan"],
              ["kloubak.emergency_stop", "app.emergency_stop"],
              ["imu_serial.raw", "imu.raw"],
              ["imu.rotation", "app.rot"],
              ["can_pcan.can", "vesc.can"],
              ["vesc.can", "can_pcan.can"]
      ]
  }
}

