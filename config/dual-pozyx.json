{
  "version": 2,
  "robot": {
    "modules": {
      "pozyx_left": {
          "driver": "pozyx",
          "in": [],
          "out": ["range", "gpio"],
          "init": {
            "port": "/dev/ttyACM0",
            "devices": ["0x6827"],
            "note": "in PC connected 0x0D53"
          }
      },
      "pozyx_right": {
          "driver": "pozyx",
          "in": [],
          "out": ["range", "gpio"],
          "init": {
            "port": "/dev/ttyACM1",
            "devices": ["0x6827"],
            "note": "in PC connected 0x0D67"
          }
      },
      "followme": {
          "driver": "osgar.followme_uwb:FollowMeUWB",
          "in": ["encoders", "scan", "emergency_stop", "pose2d", "buttons"],
          "out": ["desired_speed"],
          "init": {
            "max_speed": 0.5,
            "laser_pose2d": [0.13, 0.055, 0]
          }
      }
    },
    "links": [
      ["pozyx_left.range", "followme.pozyx_left"],
      ["pozyx_right.range", "followme.pozyx_right"]
    ]
  }
}
